<revbayes-help
	xmlns="http://www.revbayes.org/schema/help-entry"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.revbayes.org/schema/help-entry lib/rb-help-entry.xsd"
>
    <function-help-entry>
    
        <name>exp</name>

        <title>Exponential value of a number.</title>
    
        <description>
            <p>
            The 'exp' function returns the exponential value of a number.
            </p>
        </description>

        <usage>
            <![CDATA[
             exp( Real x )
             ]]> 
        </usage>
    
        <argument>
            <label>x</label>
            <argumentPassingMethod>by-const-reference</argumentPassingMethod>
            <argumentNodeType>any-DAG-node</argumentNodeType>
            <description>The number whose exponential needs to be computed.</description>
            <valueType>Real</valueType>
        </argument>

        <returnValue>RealPos, Real, RevObject</returnValue>

        <example>
            <![CDATA[
             # Let's compute the exponential of a few numbers
             exp(-1)
             exp(0)
             exp(1)
             exp(10)
             # ln is the exponential's inverse function
             ln(exp(10))
             # Another way of achieving the same thing:
             log(exp(10),base=exp(1))
             ]]>

        </example>


        <author>Bastien Boussau</author>

        <seeAlso>
            <!-- The xslt page will try to auto generate links to the referred help entries, therefore only exact names of help items should be listed here (case sensitive) -->
            <entry>ln</entry>
            <entry>log</entry>
            <entry>power</entry>
        </seeAlso>


    </function-help-entry>

</revbayes-help>

